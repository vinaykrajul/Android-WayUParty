<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_parent">


    <LinearLayout
        android:id="@+id/rsamount"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twelve_dp">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="djhjsvjgvsdjvdsjhcsdhjcsdjhcsdjhjcsdjdhcshdcjhdsjhcdcjhdsjcchdhdscjhdchj"
            android:textColor="@color/black"
            android:visibility="visible" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="end"
            android:visibility="visible"
            android:layout_height="20dp"
            android:text="Nov 22 2020">
        </TextView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rscity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twelve_dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/green"
            android:padding="6dp"
            android:id="@+id/ll_status"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="Vijayawada"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/ten_dp"
            android:textColor="@color/white"
            android:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="6dp"
            android:id="@+id/ll_cancel_option"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/items_cancelled"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:textColor="@color/white"
                android:src="@drawable/cancel_20x20">
            </ImageView>
            <ImageView
                android:id="@+id/items_reschedule"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginRight="@dimen/ten_dp"
                android:textColor="@color/white"
                android:src="@drawable/calendar_24x24">
            </ImageView>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/dividerView4"
        android:layout_below="@id/mainlayoutprofile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/navborderline"
        android:visibility="visible"></View>

</LinearLayout>