<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="@dimen/ten_dp"
        android:id="@+id/mainlayoutprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/thumb_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@+id/tv_serial_number"
            android:src="@drawable/sample_image" />

        <LinearLayout
            android:id="@+id/ll_name_pbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ten_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fcmusertype"
                android:layout_toRightOf="@id/thumb_image"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:lines="1"
                android:text="Carlsberg Danish pilnser"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_width="wrap_content"
                android:layout_below="@id/mainlayoutprofile"
                android:layout_height="wrap_content"
                android:text="Rs.1000"
                android:singleLine="true"
                android:lines="1"
                android:textColor="@color/header_bg_color"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/ten_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/five_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fcmusertype"
                android:layout_toRightOf="@id/thumb_image"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:lines="1"
                android:text="Quantity : 1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_width="wrap_content"
                android:layout_below="@id/mainlayoutprofile"
                android:layout_height="wrap_content"
                android:text="Amount : Rs.4490"
                android:singleLine="true"
                android:lines="1"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_toLeftOf="@+id/fcmusertype"
                android:layout_toRightOf="@id/thumb_image"
                android:fontFamily="sans-serif-medium"
                android:lines="1"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="Nov 16 2020"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fcmusertype"
                android:layout_toRightOf="@id/thumb_image"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:lines="1"
                android:text="4:00 PM to 11:45 PM"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_order_replacemnt"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fcmusertype"
                android:layout_toRightOf="@id/thumb_image"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:lines="1"
                android:text="No Order Replacement"
                android:textColor="@color/header_bg_color" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Remove"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/eight_dp"
            android:background="@color/black"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <View
        android:id="@+id/dividerView"
        android:layout_below="@id/mainlayoutprofile"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/gray_light"
        android:visibility="visible"></View>

</LinearLayout>